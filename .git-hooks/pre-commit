#!/bin/sh

echo "Running pre-commit checks on staged PHP files..."

# Collect staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$')

if [ -z "$STAGED_FILES" ]; then
  echo "No PHP files staged for commit."
  exit 0
fi

# Check code style with Pint (without fixing)
echo "Checking code style with Pint..."
vendor/bin/pint --test $STAGED_FILES
if [ $? -ne 0 ]; then
  echo "❌ Pint code style checks failed. Commit aborted."
  exit 1
fi

# Analyze staged files with PHPStan
echo "Running PHPStan analysis..."
echo "$STAGED_FILES" | xargs vendor/bin/phpstan analyse --no-progress --error-format=table
if [ $? -ne 0 ]; then
  echo "❌ PHPStan checks failed. Commit aborted."
  exit 1
fi

# Run PHPUnit tests
echo "Running tests..."
composer test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Commit aborted."
  exit 1
fi

echo "✅ All checks passed. Committing..."
exit 0