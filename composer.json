{
    "name": "haspadar/matcher",
    "description": "P2P matching engine for deposits and cashouts",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Kanstantsin Mesnik",
            "email": "haspadar@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.12",
        "nunomaduro/collision": "^8.8",
        "slevomat/coding-standard": "^8.17"
    },
    "scripts": {
        "test": "phpunit --order-by=random --random-order-seed=$(date +%s)",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-text=coverage.txt --coverage-clover=coverage.xml --coverage-filter=src",
        "analyse": "phpstan analyse src tests",
        "cs": "phpcs --report=full src tests",
        "fix": "phpcbf src tests"
    },
    "autoload": {
        "psr-4": {
            "Matcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Matcher\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
