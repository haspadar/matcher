{
  "preset": "psr12",
  "rules": {
    "array_syntax": {
      "syntax": "short"
    },
    "ordered_imports": true,
    "no_unused_imports": true,
    "no_extra_blank_lines": true,
    "ordered_class_elements": {
      "order": [
        "use_trait",
        "constant_public",
        "constant_protected",
        "constant_private",
        "property",
        "construct",
        "method_public",
        "method_protected",
        "method_private"
      ]
    }
  }
}
